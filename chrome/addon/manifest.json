{
    "version":"1.0",
    "manifest_version":2,
    "name":"Theme-awesome",
    "description":"a classic customized experience for your browser",
    "icons":{
        "128":"./images/icon.png",
        "48":"./images/icon.png",
        "16":"./images/icon.png"
    },
    "browser_Action":{
        "default_icon":{
            "128":"./images/icon.png",
            "48":"./images/icon.png",
            "16":"./images/icon.png"
        }
    },
    "chrome_url_overrides": {
        "newtab": "./newTab.html"
      },
    "background": {
    "scripts": ["./js/background.js"],
    "persistent": false
    },
    "permissions": ["http://*/*","https://*/*","topSites","storage","tabs"]
}